@using MLHousePrice.Models.Services.DTOs

@model CreateAdvertisementDto
@{
    ViewData["Title"] = "درج آگهی جدید";
}

<h2> درج آگهی جدید</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="container">

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="LocationId" class="control-label"></label>
                <input asp-for="LocationId" class="form-control" />
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="BuildYear" class="control-label"></label>
                <input asp-for="BuildYear" class="form-control" />
                <span asp-validation-for="BuildYear" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Rooms" class="control-label"></label>
                <input asp-for="Rooms" class="form-control" />
                <span asp-validation-for="Rooms" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Floor" class="control-label"></label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>   
        </div>
        <hr />

        <div class="form-group row">
            <div class="col-md-4">
                <div class="form-check">
                    <input asp-for="Elevator" class="form-check-input" />
                    <label asp-for="Elevator" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Parking" class="form-check-input" />
                    <label asp-for="Parking" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Storage" class="form-check-input" />
                    <label asp-for="Storage" class="form-check-label"></label>
                </div>
            </div>
        </div>
        <hr />



        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="ثبت آگهس" class="btn btn-primary" />
        </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

 